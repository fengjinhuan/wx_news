/**index.wxss**/
page{
  height: 100%;
}
.bg-box{
  height: 380rpx;width: 100%;
  position: relative;
}
.banner-box{
  height: 380rpx;width: 100%;
  position: relative;
}
image{
  height: 380rpx;width: 100%;
}
.spanbox{
  font-size: 20px;
  left: 40rpx;
  position: absolute;
  top: 140rpx;color: #fff;
}
.con-box{
  height: auto;width: 700rpx;
  margin: 0 auto;overflow: auto;
  border-bottom: 1px solid #F5F5F5;
}
.h1{
  background: #fff;
  display: block;
  margin: 30rpx 0 30rpx 30rpx;
  width: 512rpx;
  line-height: 1.5;
  color: #232A30;
  font-weight: bold;
  float: left;
  
}
.h1-img{
  float: right;
  margin:28rpx 0; 
  height: 120rpx;width: 150rpx;
}
.ball{
  height: 80rpx;width: 80rpx;
  background: #95BAD7;
  position: fixed;z-index: 99;
}
.ball image{
  height: 60rpx;width: 60rpx;
  margin: 10rpx;
}
.mark{
  position: fixed;
  height: 100%;width: 100%;
  background: #000;opacity: 0.6;
  left: 0;top: 0;z-index: 97;
  display: none;
}
.sec-box{
  position: fixed;
  z-index: 98;
  height: 100%;width: 80%;
  background: #232A30;
  left: 0;top: 0;
  transform: translateX(-100%);
  transition: all 1s;
  color: #fff;
}
.show{ 
  transform: translateX(0);
}
.head{overflow: auto;}
.head-tou{
  height: 62rpx;width:62rpx;
  float: left;border: 1px solid #eee;
  margin: 27rpx 27rpx  27rpx 80rpx; border-radius: 50%;
}
.name{
  float: left;
  color: #fff;
  line-height: 116rpx;
}
.icon{
  height: 90rpx;width: 100%;
  display: flex;color: #fff;
  justify-content: space-around;
  font-size: 18px;text-align: center;
}
.icon-s{
  height: 90rpx;width: 90rpx;
}
.icon-img{
  height: 40rpx;width: 40rpx;
  margin: 0 25rpx;
}
.tab-list-show{
  height: 90rpx;width: 100%;
  background: #1B2329;
  margin-top:17rpx; line-height: 90rpx;
}
.tab-img{
  height: 30rpx;width: 30rpx;
  margin: 0 80rpx;
}
.tab-r{
  float: right;
  margin-right: 62rpx;
}
.tab-list{
  margin-left: 80rpx;
  height: 90rpx;
  line-height: 90rpx;
}
.night{
  color: #000;
  position: fixed;
  height: 100rpx;
  width: 100%;
  bottom: 0;
  display: flex;
  justify-content: space-around;
  align-items: center;
  line-height: 100rpx;
  text-align: center;
}
.night-1{
  height: 100%;width: 50%;
  background: #fff;

}
.night-1 image{
  vertical-align: middle;
  margin: -10rpx 30rpx;
  height: 50rpx;width: 50rpx; 
}